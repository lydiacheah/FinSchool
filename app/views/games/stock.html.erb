            $('#s_pb').attr("aria-valuenow", progressbar);
            $('#s_pb').text(Math.floor(progressbar)+"%");
            $('#s_pb').attr("style", "width:"+progressbar+"%");
        }
        if (progressbar >= 100){
            refreshRates();
            progressbar = 0;
          }
      },100)
    })

    $('#stop').click(function(){
      clearInterval(timer);
    })
    

  }); //document ready
</script>
