      $('#interest_rate').text($interestRate);
      $('#amount_placed').text(placementAmount);
      progress = setInterval(function(){
        progressbar += 100/$progressRate;
        if (progressbar > 2){
          $('#fd_pb').attr("aria-valuenow", progressbar);
          $('#fd_pb').text(Math.floor(progressbar)+"%");
